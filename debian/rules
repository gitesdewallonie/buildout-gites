#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

PACKAGE	  := gites-website
BUILDDIR  := /tmp/$(PACKAGE)
CURDIR    := $(shell pwd)
DEBIAN    := $(CURDIR)/debian/$(PACKAGE)
PYTHONVER := 2.7
PYTHONBIN := /usr/bin/python$(PYTHONVER)

distribution := $(shell lsb_release -is)

clean:
	rm -rf $(BUILDDIR)/
	dh_testdir
	dh_testroot
	rm -rf build
	rm -f build-stamp
	dh_clean

build:
	mkdir -p $(BUILDDIR)
	cp -ap ./bootstrap.py $(BUILDDIR)
	cp -ap ./*.cfg $(BUILDDIR)
	cd $(BUILDDIR) && virtualenv .
	cd $(BUILDDIR) && ln -s base.cfg buildout.cfg
	cd $(BUILDDIR) && bin/python bootstrap.py
	cd $(BUILDDIR) && bin/buildout -c base.cfg
	echo $(DEBIAN)
	touch build-stamp

install:
	rm -rf $(DEBIAN)
	dh_testdir
	dh_testroot
	dh_clean -k -s
	dh_installdirs -s

	mkdir -p $(DEBIAN)/home/gdw/$(PACKAGE)

	cp -ap $(BUILDDIR)/bin $(DEBIAN)/home/gdw/$(PACKAGE)/
	#cp -ap $(BUILDDIR)/eggs $(DEBIAN)/home/gdw/$(PACKAGE)/
	cp -ap $(BUILDDIR)/parts $(DEBIAN)/home/gdw/$(PACKAGE)/

	rm -rf $(BUILDDIR)/

binary-common:
	dh_testdir
	dh_testroot

	dh_installchangelogs

	dh_installdocs
	dh_installdebconf
	dh_installinit
	dh_installman
	dh_link
	dh_strip
	dh_fixperms
	dh_shlibdeps
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: build install
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

binary-arch: install
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

binary: binary-arch

.PHONY: build clean binary install
